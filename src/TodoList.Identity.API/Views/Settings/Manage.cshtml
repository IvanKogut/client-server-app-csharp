@model ManageViewModel

<ul>
  <li>
    <a href="change-password">Change password</a>
  </li>
  <li>
    @if (Model.IsTwoFactorAuthenticationEnabled)
    {
      <form id="disable-2fa" asp-action="Disable2fa">
        <a onclick="document.getElementById('disable-2fa').submit();" style="cursor: pointer; color: rgb(85, 26, 139);">Turn off two-factor authentication</a>
      </form>
    }
    else
    {
      <a asp-action="Enable2fa">Turn on two-factor authentication</a>
    }
  </li>
</ul>
