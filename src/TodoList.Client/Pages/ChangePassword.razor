@layout AuthLayout
@page "/change-password"

@inherits ChangePasswordComponent

<div class="main">
  <div class="field">
    <label class="display-block" for="old-password">Current</label>
    <input id="old-password" class="input-text" bind="@UserChangePasswordModel.OldPassword" type="password" />
  </div>

  <div class="field">
    <label class="display-block" for="new-password">New</label>
    <input id="new-password" class="input-text" bind="@UserChangePasswordModel.NewPassword" type="password" />
  </div>

  <div class="field">
    <label class="display-block" for="confirm-new-password">Retype new</label>
    <input id="confirm-new-password" class="input-text" bind="@UserChangePasswordModel.ConfirmNewPassword" type="password" />
  </div>

  <ErrorsComponent Errors="Errors" />

  <div>
    @if (IsSpinnerEnabled)
    {
      <div class="loader"></div>
    }
    <input class="submit-button" type="button" onclick="@OnEventAsync" value="Change" />
  </div>
</div>
