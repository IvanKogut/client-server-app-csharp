@layout AuthLayout
@page "/account"

@inherits AccountComponent

<div class="main">
  <ul>
    <li>
      <a href="change-password">Change password</a>
    </li>
    <li>
      @if (IsTwoFactorAuthenticationEnabled != null)
      {
        @if (IsTwoFactorAuthenticationEnabled.Value)
        {
          <a onclick="@OnDisableTwoFactorAuthenticationAsync" style="cursor: pointer; color: rgb(85, 26, 139);">Turn off two-factor authentiction</a>
        }
        else
        {
          <a href="enable-two-factor-authentication">Turn on two-factor authentication</a>
        }
      }
    </li>
  </ul>
</div>
