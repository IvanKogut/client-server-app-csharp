@layout AuthLayout
@page "/account"

@inherits AccountComponent

<div>
  <a href="change-password">Change password</a>
</div>

@if (IsTwoFactorAuthenticationEnabled != null)
{
  @if (IsTwoFactorAuthenticationEnabled.Value)
  {
    <div id="disable">
      <a onclick="@OnDisableTwoFactorAuthenticationAsync">Відключити двофакторну аутентифікацію</a>
    </div>
  }
  else
  {
    <div id="enable-link">
      <a href="enable-two-factor-authentication">Включити двофакторну аутентифікацію</a>
    </div>
  }
}
