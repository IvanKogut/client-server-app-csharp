@page

<!DOCTYPE html>
<html>
<head>
  <title>Client-server app</title>
  <script src="/js/jquery-3.1.0.min.js" type="text/javascript"></script>
  <script src="/js/login.js" type="text/javascript"></script>
  <link href="/css/style.css" type="text/css" rel="stylesheet" />
</head>
<body>

  <label for="email">Електронна пошта</label>
  <input id="email" type="text" /> <br />

  <label for="password">Пароль</label>
  <input id="password" type="password" /> <br />

  <div id="two-factor-authentication-block" style="display: none;">
    <label for="authentication-code">Код аутентифікації</label>
    <input id="authentication-code" type="text" /> <br />
  </div>

  <a href="https://www.facebook.com/v3.2/dialog/oauth?response_type=code&client_id=2183212631898223&redirect_uri=https://localhost:44388/facebookcallback">Facebook</a>
  <a href="https://accounts.google.com/o/oauth2/v2/auth?response_type=code&client_id=895102170629-q6uh1oqvltjau4v9p4lqsor155dlvdcl.apps.googleusercontent.com&redirect_uri=https://localhost:44388/googlecallback&scope=email">Google</a>
  <a href="https://github.com/login/oauth/authorize?client_id=f39f5854ebe1640ebac6&redirect_uri=https://localhost:44388/githubcallback&scope=user:email">Github</a>

  <p onclick="app.login();">Увійти</p>

  <ul id="errors"></ul>

  <mini-profiler />
</body>
</html>
